<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity"
    android:background="@color/miblack"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/arizonia"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hello Chat"
                android:textColor="@color/semiyellow"
                android:textSize="60dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/ic_hello"
                tools:ignore="VectorDrawableCompat" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/semiyellow"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="9dp"
                android:textColor="@color/semiyellow"
                android:cursorVisible="true"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/semiyellow"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="9dp"
                android:textColor="@color/semiyellow"
                android:cursorVisible="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="Don't have account? "
                    android:textColor="@color/semiyellow" />

                <TextView
                    android:id="@+id/tvClick_Signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="SignUp"
                    android:textColor="@color/semiyellow" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_SignUp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Sign In"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="@color/semiyellow"
                app:cornerRadius="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_googlea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_google"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/imgbtn_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_facebook"
                    tools:ignore="VectorDrawableCompat"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/signUpPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Sign in with Phone"
                android:textColor="@color/semiyellow"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>